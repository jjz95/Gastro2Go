<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin.css" />
    <script> var exports = {}; </script>

    <title>Admin</title>
</head>

<body>
    
    <header>

    </header>
    <main>
        <a href="/admin/logout">Log out</a>
        <br>
        <hr>
        <br>
        <table>
            <caption>Users:</caption>
            <thead>
                <tr> 
                    <!-- firstName, lastName, email, passwordHash, dateOfBirth, contactNumber, business, address, zipCode, country, id -->
                    <th></th>
                    <th>User ID</th>
                    <th>E-mail</th>
                    <th>Password</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>ContactNumber</th>
                    <th>DateOfBirth</th>
                    <th>Business</th>
                    <th>Address</th>
                    <th>ZipCode</th>
                    <th>Country</th>
                </tr>
            </thead>
            <tbody>
                <% userList.forEach(function(user){ %>
                <tr>
                    <td></td>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.passwordHash %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.contactNumber %></td>
                    <td><%= user.dateOfBirth %></td>
                    <td><%= user.business %></td>
                    <td><%= user.address %></td>
                    <td><%= user.zipCode %></td>
                    <td><%= user.country %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <br>
        <hr>
        <br>
        <br>
        <form action="/admin/addinterest" method="POST">
            <p>Add new interest to system:</p>
            <input type="text" name="name" placeholder="Write interest name here" required>
            <br>
            <button class="btn" type="submit">Add Interest</button>
        </form>
        <br>
        <button onclick="deleteSelectedInterests()" id='deleteBtn' type="submit">Delete Selected Interests</button>
        <br>
        <hr>
        <br>

        <br>
        <hr>
        <br>
    </main>

    <footer>

    </footer>
    
</body>

</html>